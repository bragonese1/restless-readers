<!-- Loop over each object in the books array -->
{{#each books as |book| }}
<div class="columns mb-4 book">
  <div class="column is-one-third">
    <h2>
      <a href="/book/{{book.id}}">{{book.name}}</a>
    </h2>
    <span for="img" aria-label="book">ðŸ“–</span>
    <p>Created by {{user.username}}</p>
  </div>
  <div class="column">
    <h5>Description:</h5>
    <p>{{book.description}}</p>
    <h5>Review:</h5>
    <p>{{book.review}}</p>
  </div>
</div>
{{/each}}
